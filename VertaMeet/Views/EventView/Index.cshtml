@model VertaMeet.Models.EventViewModel
@{
    ViewBag.Title = Model.Event.Name;
}

@section PageStyles
{
    <link href="../../Content/Site.css" type="text/css" rel="stylesheet" />
}

<div class="container">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Welcome to @Model.Event.Name!</strong>
            </h2>
            <hr>
            <img class="img-responsive img-border img-center" src="@Model.Event.ImageUrl" alt="">
            <hr class="visible-xs">
            <div id="ProfileButtons" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="AboutB" onclick="about()">About</button>
                <button type="button" class="btn btn-default" id="MembersB" onclick="members()">Attendees</button>
            </div>
            <div id="ProfileOptions">
                <p>@Model.Event.Description</p>
            </div>
            <div id="Members">
                @foreach (var membr in Model.Event.Attendees)
                {
                    <a href="#" title=@membr.Name><img id="UserPhoto" src="http://lwos.lastwordonsports.netdna-cdn.com/lwos-content/uploads/2013/07/silhouette.jpg" alt=@membr.Name></a>
                }
            </div>

            <!-- Image Gallery for Events not implemented -->
