        width: 75%;
        /* For visibility. Delete me */
        border: 1px solid red;
        text-align: center;
    }

    #ProfileButtons {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        margin-top: 60px;
    }

    #ProfileOptions {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        margin-top: 10px;
        width: 75%;
        /* For visibility. Delete me */
        border: 1px solid black;
    }

    #Members {
        display: none;
        align-content: center;
        align-items: center;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        margin-top: 10px;
        width: 75%;
        /* For visibility. Delete me */
        border: 1px solid black;
    }

    #Photoz {
        display: none;
        align-content: center;
        align-items: center;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
