        height: 50px;
    }

    #DisplayPhotos {
        display: inline;
        width: 50px;
        height: 50px;
    }

    #UpcomingEvents {
        align-content: center;
        align-items: center;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        margin-top: 10px;
        width: 75%;
        /* For visibility. Delete me */
        border: 1px solid black;
    }

    #LeftCol {
        /* Move it to the left */
        display: inline-block;
        width: 200px;
        text-align: center;
        /* Move it away from the content */
